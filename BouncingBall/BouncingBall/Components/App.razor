<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["BouncingBall.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script src="copilot-thinkdeeper.js"></script>
    <script src="deekseek.js" type="module"></script>

    <script>
        let animationFrameId;

        window.startAnimation = (dotNetHelper) => {
            function animate() {
                dotNetHelper.invokeMethodAsync('UpdatePhysics');
                animationFrameId = requestAnimationFrame(animate);
            }
            animate();
        };

        window.stopAnimation = () => {
            cancelAnimationFrame(animationFrameId);
        };
    </script>
    <script>
         function initCanvas() {
            window.ctx = document.getElementById('canvas').getContext('2d');
        }

         function clearCanvas() {
            ctx.clearRect(0, 0, ctx.canvas.width, ctx.canvas.height);
        }

         function drawHexagon(vertices) {
            ctx.beginPath();
            ctx.moveTo(vertices[0].x, vertices[0].y);
            for (let i = 1; i < vertices.length; i++) {
                ctx.lineTo(vertices[i].x, vertices[i].y);
            }
            ctx.closePath();
            ctx.strokeStyle = '#000';
            ctx.lineWidth = 2;
            ctx.stroke();
        }

         function drawBall(x, y, radius) {
            ctx.beginPath();
            ctx.arc(x, y, radius, 0, Math.PI * 2);
            ctx.fillStyle = '#ff0000';
            ctx.fill();
        }
    </script>
</body>

</html>
